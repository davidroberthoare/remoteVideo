#:kivy 1.0.9
# THE CLIENT LAYOUT FILE

<ClientScreen>:
    FloatLayout:
        Video:
            id: videoplayer
            # source: "media/black.png"
            # state: 'play'
            # eos: 'loop'
            an: True
            keep_ratio: True
            allow_stretch: True
            volume: 0
            opacity:0
            preview: "../media_client/black.png"
            on_position: root.on_position_change(self.position)
            on_duration: root.on_duration_change(self.duration)
            on_eos: root.on_eos_change(self.eos)

        Label:
            id: status_text
            text: 'test text'
            size_hint: (1, .1)